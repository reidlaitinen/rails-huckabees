<h1>All Items </h1>
<h2>
  in <%= link_to @department.name, department_path(@department) %>
</h2>
<h3><%= link_to  "Add an Item", new_department_item_path(@department) %></h3>
<ul>
  <% @items.each do |item| %>
  <li>
    <%= link_to  item.name, department_item_path(@department, item) %>: &nbsp; $<%= item.price %> &nbsp; Rating: <%= item.avg_rating %>
  </li>
  <% end %>
</ul>
<h2><%= link_to  "Back to All Departments", departments_path %></h2>
